[Unit]
Description=AUDITOR accounting tool
Documentation=https://alu-schumacher.github.io/AUDITOR/

[Install]
RequiredBy=multi-user.target

[Service]
Type=simple
User=auditor
Group=auditor
WorkingDirectory=/etc/auditor
ExecStart=/usr/bin/auditor /etc/auditor/auditor.yml
Restart=on-failure
RestartSec=60
