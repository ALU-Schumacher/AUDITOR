[Unit]
Description=Utilization report for AUDITOR
Documentation=https://alu-schumacher.github.io/AUDITOR/

[Install]
RequiredBy=multi-user.target

[Service]
Type=simple
User=auditor-utilization-report
Group=auditor
WorkingDirectory=/etc/auditor
ExecStart=/usr/bin/auditor-utilization-report /etc/auditor/auditor-utilization-report.yml
Restart=on-failure
RestartSec=60
